# R&D Platform Environment Configuration

# API Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rd_platform
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Configuration
EMAIL_FROM=noreply@rd-platform.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-email-password

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# R&D Module Configuration
RND_DATA_DIR=./data/rnd-module
RND_BACKUP_DIR=./data/rnd-module/backups
RND_DEBUG=false
RND_DORMANT_PERIOD=604800000

# System Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://yourdomain.com