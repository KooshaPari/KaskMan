{
  "name": "kaskmanager-rd-platform",
  "version": "1.0.0",
  "description": "KaskManager R&D Platform - Persistent, Always-On, Self-Improving Utility Platform",
  "main": "src/interfaces/cli/index.js",
  "type": "module",
  "bin": {
    "kaskmanager": "src/interfaces/cli/index.js",
    "rd-platform": "src/interfaces/cli/index.js"
  },
  "scripts": {
    "start": "node src/interfaces/cli/index.js",
    "start:api": "node src/interfaces/api/server.js",
    "start:mcp": "node src/interfaces/mcp/server.js",
    "start:rnd": "node src/rnd-module/index.js",
    "start:dashboard": "node dashboard-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "build": "npm run lint && npm run test:ci",
    "build:production": "npm run clean && npm run build",
    "dev": "nodemon src/interfaces/cli/index.js",
    "dev:api": "nodemon src/interfaces/api/server.js",
    "dev:mcp": "nodemon src/interfaces/mcp/server.js",
    "dev:rnd": "nodemon src/rnd-module/index.js",
    "clean": "rm -rf dist/ coverage/ logs/",
    "setup": "npm install && npm run build",
    "setup:dev": "npm install && npm run prepare",
    "prepare": "husky install || true",
    "precommit": "npm run lint:fix && npm run test:ci",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run security:secrets",
    "security:secrets": "grep -r --include=\"*.js\" --include=\"*.json\" --exclude-dir=node_modules -i \"password\\|secret\\|key\\|token\" . | head -10 || true",
    "docker:build": "docker build -t kaskmanager-rd-platform .",
    "docker:run": "docker run -p 8080:8080 kaskmanager-rd-platform",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:undeploy": "kubectl delete -f k8s/",
    "monitor": "node src/interfaces/cli/index.js system status --watch",
    "health": "node src/interfaces/cli/index.js system health",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "keywords": [
    "r&d",
    "platform",
    "cli",
    "api",
    "mcp",
    "project-management",
    "development",
    "interface"
  ],
  "author": "R&D Platform Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.0.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rd-platform/interfaces.git"
  },
  "bugs": {
    "url": "https://github.com/rd-platform/interfaces/issues"
  },
  "homepage": "https://github.com/rd-platform/interfaces#readme",
  "files": [
    "src/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
      "no-undef": "error",
      "no-unreachable": "warn"
    },
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": ["**/*.test.js", "**/test/**/*.js"],
        "env": {
          "jest": true,
          "node": true
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "coverage/",
      "*.test.js"
    ],
    "exec": "node"
  }
}